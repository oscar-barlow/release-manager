# Environment
ENVIRONMENT_NAME=dev
STUB_MODE=false  # set true to disable Docker actions

# GitHub Configuration
GITHUB_REPO=oscar-barlow/home.services
GITHUB_TOKEN_FILE=./.secrets/github_token

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Database (environment name is appended automatically)
DATABASE_PATH=./data/release-manager.db

# Deployment Configuration
DEPLOYMENT_TIMEOUT_SECONDS=300
HEALTH_CHECK_INTERVAL_SECONDS=5

# Web UI
WEB_HOST=0.0.0.0
WEB_PORT=8080

# Poller
POLL_INTERVAL_SECONDS=60
